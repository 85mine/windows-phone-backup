<UserControl x:Class="Reboot.UserControls.Goodbye"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}">
        <TextBlock x:Name="TextGoodbye" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding LocalizedResources.TextGoodbye, Source={StaticResource LocalizedStrings}}" VerticalAlignment="Center" FontSize="48"/>
    </Grid>
</UserControl>